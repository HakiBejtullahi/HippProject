{
  "ConnectionStrings": {
    "DefaultConnection": "Server=${DB_HOST};Database=${DB_NAME};User=${DB_USER};Password=${DB_PASSWORD};"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "ExpirationInMinutes": "${JWT_EXPIRATION_MINUTES}"
  },
  "Cloudinary": {
    "CloudName": "${CLOUD_NAME}",
    "ApiKey": "${CLOUD_KEY}",
    "ApiSecret": "${CLOUD_SECRET}"
  },


  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
